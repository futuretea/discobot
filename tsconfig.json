{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"target": "ES2020",
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"paths": {
			"@/*": ["./*"]
		},
		"types": ["vite/client"]
	},
	"include": ["src", "**/*.ts", "**/*.tsx", "lib", "components", "app"],
	"exclude": [
		"node_modules",
		"server/workspaces",
		"agent-api/scripts",
		"dist",
		"out"
	]
}
