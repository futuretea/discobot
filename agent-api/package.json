{
	"name": "agent-api",
	"version": "1.0.0",
	"description": "Agent API service using Hono and Claude SDK",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"typecheck": "tsc --noEmit",
		"test": "npm run test:unit && npm run test:integration",
		"test:unit": "node --import tsx --test src/**/*.test.ts",
		"test:integration": "node --import tsx --test test/integration/**/*.test.ts",
		"docker:build": "docker build -t ghcr.io/obot-platform/discobot:main -f ../Dockerfile .."
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.2.56",
		"@hono/node-server": "^1.19.9",
		"@opencode-ai/sdk": "^1.2.14",
		"@types/ws": "^8.18.1",
		"ai": "^6.0.100",
		"hono": "^4.12.2",
		"picomatch": "^4.0.3",
		"ws": "^8.19.0"
	},
	"devDependencies": {
		"@anthropic-ai/sdk": "^0.78.0",
		"@types/bun": "^1.3.9",
		"@types/node": "^25.3.0",
		"@types/picomatch": "^4.0.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
